<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING/DTD BEAN/EN"
        "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="logBeforeAdvice"
          class="net.yanrc.xpring.web.biz.service.demo.LogBeforeAdvice"/>

    <bean id="helloSpeaker"
          class="net.yanrc.xpring.web.biz.service.demo.HelloSpeaker"/>

    <bean id="helloSpeakerBean"
          class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="proxyInterfaces">
            <value>net.yanrc.xpring.web.biz.service.demo.IHello</value>
        </property>
        <property name="target">
            <ref bean="helloSpeaker"/>
        </property>
        <property name="interceptorNames">
            <list>
                <value>logBeforeAdvice</value>
            </list>
        </property>
    </bean>


    <bean id="some"
          class="net.yanrc.xpring.web.biz.service.demo.Some"/>

    <bean id="otherIntroduction"
          class="net.yanrc.xpring.web.biz.service.demo.OtherIntroduction"/>

    <bean id="otherAdvisor"
          class="org.springframework.aop.support.DefaultIntroductionAdvisor">
        <constructor-arg index="0">
            <ref bean="otherIntroduction"/>
        </constructor-arg>
        <constructor-arg index="1">
            <value>net.yanrc.xpring.web.biz.service.demo.IOther</value>
        </constructor-arg>
    </bean>

    <bean id="proxyFactoryBean"
          class="org.springframework.aop.framework.ProxyFactoryBean">
        <property name="proxyInterfaces">
            <value>net.yanrc.xpring.web.biz.service.demo.ISome</value>
        </property>
        <property name="target">
            <ref bean="some"/>
        </property>
        <property name="interceptorNames">
            <list>
                <value>otherAdvisor</value>
            </list>
        </property>
    </bean>
</beans>